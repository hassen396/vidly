@model vidly.ViewModels.MovieFormViewModel

@{
    ViewData["Title"] = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-white container">
@if(Model.Movie == null)
{
    <h2>New Movie</h2>
}
else 
{
    <h2>Edit Movie</h2>
}
    @using (Html.BeginForm("Save", "Movies", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Movie.Name)
            @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Movie.ReleaseDate)
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Movie.GenreId)
            @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new
                {
                    @class = "form-control"
                })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Movie.Stock)
            @Html.TextBoxFor(m => m.Movie.Stock, new { @class = "form-control" })
        </div>

        @Html.HiddenFor(m => m.Movie.Id)
        <button type="Submit" class="btn btn-primary mt-4">Save</button>


    }

</div>
